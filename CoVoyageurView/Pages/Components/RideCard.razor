@page "/ridecard"

<div class="flex justify-between min-h-60 card-shadow rounded-2xl p-4 [&>*]:font-semibold [&>*]:text-slate-700  ">
    <div >
        <div class="flex flex-col gap-4  items-center">
            <p>@Ride.RideDate.ToString("HH:mm") - @Ride.Departure</p>
            <svg xmlns="http://www.w3.org/2000/svg" height="28" width="28" viewBox="0 0 384 512"><path fill="#6f8b90" d="M169.4 470.6c12.5 12.5 32.8 12.5 45.3 0l160-160c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L224 370.8 224 64c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 306.7L54.6 265.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l160 160z" /></svg>

            <p>@Ride.Arrival</p>
            <div class="flex gap-4 mt-4">
                <!-- pfp -->
                <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M24 48C37.2548 48 48 37.2548 48 24C48 10.7452 37.2548 0 24 0C10.7452 0 0 10.7452 0 24C0 37.2548 10.7452 48 24 48Z" fill="#DDDDDD" />
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M24 29C26.3704 29 29.2407 29.2483 31.6111 29.7448C35.5096 30.2892 38.191 32.8884 39.3516 36.8179C35.6836 41.208 30.1678 44 24 44C17.8195 44 12.2939 41.1966 8.62518 36.792C9.73085 32.9982 12.3044 30.5554 16.3889 29.7448C18.7593 29.2483 21.6296 29 24 29ZM24 8C28.4183 8 32 11.5817 32 16V18C32 22.4183 28.4183 26 24 26C19.5817 26 16 22.4183 16 18V16C16 11.5817 19.5817 8 24 8Z" fill="white" />
                </svg>
                <div>
                    <p class="block">@User.FirstName</p>
                    <!-- star -->
                    <div class="flex justify-center items-center gap-1">
                        <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path fill="#6f8b90" d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z" /></svg>
                        <p>@Rating.Score</p>
                    </div>

                </div>

            </div>
        </div>
    </div>
   
    <p>@(Ride.AvailableSeats != 0 ? $"{Ride.Price}" : $"{Ride.Price}€")</p>

</div>

@code {
    [Parameter]
    public User User { get; set; } = new()
        {
            FirstName = "Jean",
        };
    [Parameter]
    public Ride Ride { get; set; } = new()
        {
            RideDate = DateTime.Now,
            Departure = "Lille",
            Arrival = "Paris",
            Price = 10.99M,
            AvailableSeats = 0,

        };
    
    [Parameter]
    public Rating Rating { get; set; } = new()
        {
            Score = 4.3M,
        };


}
